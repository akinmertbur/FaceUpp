<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Sign in</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          <!-- Makes POST request to /login route -->
          <form id="loginForm" action="/api/auth/login" method="POST" onsubmit="return validateLoginForm()">
            <% if (locals.successMsg) { %>
              <div class="alert alert-success">
                <%= successMsg %>
              </div>
            <% } else if (locals.errorMsg) { %>
              <div class="alert alert-danger">
                <%= errorMsg %>
              </div>
            <% } %>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" id="email" name="username" required>
              <div class="invalid-feedback" id="emailError"></div>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" id="password" name="password" required minlength="8">
              <div class="invalid-feedback" id="passwordError"></div>
            </div>
            <button type="submit" class="login-register-button">Sign in</button>
          </form>
          <p class="login-register-msg">Click <a href="/register">here</a> to Sign up</p>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/login.js"></script>

<%- include('partials/footer') %>
