<%- include('partials/header') %>

<div class="jumbotron centered">
    <div class="container">
        <% if (locals.errMsg) { %>
            <div class="alert alert-success">
              <%= errMsg %>
            </div>
          <% } %>
          <% if (locals.success) { %>
            <div class="alert alert-success">
              <%= success %>
            </div>
          <% } %>
        <form id="searchForm" action="/api/users/getUsers" method="post">
            <div class="form-group">
                <label style="font-weight: bolder;" for="username">Username</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Enter the Username..." required>
                <button type="submit" class="search-button">Search</button>
            </div>    
        </form>
    </div>
    <div class="container user-table">
        <% if(locals.users) { %>
            <table>
                <% users.forEach(user => { %>
                    <tr>
                        <td><a href="/userProfile/<%= user.id %>"><%= user.username %></a></td>
                    </tr>
                <% }) %>
            </table>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %>
